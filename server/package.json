    "expect.js": "^0.3.1",
    "husky": "^7.0.2",
    "mocha": "^9.1.1",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.12",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "bunyan": "^1.8.15",
